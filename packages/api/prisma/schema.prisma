
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                         String        @id @default(uuid())
  name                   String
  hashedPassword String
  refreshToken       RefreshToken?
}

model RefreshToken {
  id           String        @id @default(uuid())
  token     String
  user       User          @relation(fields: [userId], references: [id])
  userId    String        @unique
}

model Service {
  id                      String               @id @default(uuid())
  title                   String
  price                 Float
  previewImage   String
  masterServices MasterService[]
}

model Master {
  id                         String               @id @default(uuid())
  name                   String
  description           String
  previewImage      String
  timeSlots             TimeSlot[]
  booking              Booking[]
  masterServices    MasterService[]
}

model MasterService {
  id              String       @id @default(uuid())
  masterId   String
  serviceId   String
  master      Master      @relation(fields: [masterId], references: [id], onDelete: Cascade)
  service      Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())

  @@unique([masterId, serviceId])
  @@index([masterId,serviceId])
}

model TimeSlot {
  id                 String       @id @default(uuid())
  date             DateTime
  startTime      String
  endTime        String
  masterId       String
  master            Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)
  booking         Booking?

  @@index([date, startTime, endTime])
  @@unique([masterId, date, startTime, endTime])
}


model Booking {
  id                          String      @id @default(uuid())
  startTime              DateTime
  endTime               DateTime

  timeSlot                 TimeSlot   @relation(fields: [timeSlotId], references: [id], onDelete: Cascade)
  timeSlotId              String       @unique
  masterId                String
  master                   Master   @relation(fields: [masterId], references: [id], onDelete: Cascade)
  @@index([startTime, endTime])
}
