
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                         String        @id @default(uuid())
  name                   String
  hashedPassword String
  refreshToken       RefreshToken?
}

model RefreshToken {
  id           String        @id @default(uuid())
  token     String
  user       User          @relation(fields: [userId], references: [id])
  userId    String        @unique
}
